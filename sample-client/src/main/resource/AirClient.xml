<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- 打开Spring的Annotation支持 -->
    <context:annotation-config />

    <bean id="iLoveYouService" class="com.iloveqyc.spring.ServiceProxy" init-method="init">
        <property name="iface" value="com.iloveqyc.sample.api.ILoveYouService"/>
        <property name="serviceName" value="qiuyongcheniLoveYouService1"/>
    </bean>

</beans>
